{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,

    "lib": ["ESNext", "DOM"],

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "express": ["node_modules/@types/express/index.d.ts"]
    }
  },
  "include": ["src/**/*", "app"],
  "exclude": ["node_modules", "dist"]
}
